{
  "name": "@ansvar/japan-law-mcp",
  "mcpName": "eu.ansvar/japan-law-mcp",
  "version": "1.0.0",
  "description": "Japanese law database covering personal information protection (APPI), cybersecurity, telecommunications, corporate law, and unauthorized access legislation with full-text search",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "japan-law-mcp": "dist/index.js"
  },
  "files": [
    "dist",
    "data/database.db"
  ],
  "scripts": {
    "build": "tsc",
    "build:db": "node --import tsx scripts/build-db.ts",
    "build:db:free": "node --import tsx scripts/build-db-free.ts",
    "dev": "node --import tsx src/index.ts",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:contract": "vitest run __tests__/contract/",
    "ingest": "node --import tsx scripts/ingest.ts",
    "check-updates": "node --import tsx scripts/check-updates.ts",
    "drift:detect": "node --import tsx scripts/drift-detect.ts",
    "validate": "npm test && npm run test:contract",
    "prepublishOnly": "npm run build",
    "postinstall": "test -d dist || npm run build || true",
    "health": "curl -s http://localhost:3000/health | jq ."
  },
  "dependencies": {
    "@ansvar/mcp-sqlite": "^1.0.3",
    "@modelcontextprotocol/sdk": "^1.25.3"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^22.15.29",
    "@vercel/node": "^5.6.4",
    "@vitest/coverage-v8": "^4.0.18",
    "better-sqlite3": "^12.6.2",
    "fast-xml-parser": "^5.3.5",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=18"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Ansvar-Systems/japan-law-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/Ansvar-Systems/japan-law-mcp/issues"
  },
  "homepage": "https://github.com/Ansvar-Systems/japan-law-mcp#readme",
  "keywords": [
    "mcp",
    "model-context-protocol",
    "ai",
    "claude",
    "japan-law",
    "appi",
    "personal-information",
    "cybersecurity",
    "telecommunications",
    "companies-act",
    "unauthorized-access",
    "my-number",
    "japan",
    "legal",
    "compliance",
    "ansvar"
  ],
  "author": "Ansvar Systems AB <hello@ansvar.ai>",
  "license": "Apache-2.0",
  "publishConfig": {
    "access": "public"
  },
  "overrides": {
    "path-to-regexp": "^8.0.0",
    "undici": "^7.0.0",
    "ajv": "^8.18.0"
  }
}
