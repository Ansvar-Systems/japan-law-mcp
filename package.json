{
  "name": "@ansvar/japan-law-mcp",
  "version": "1.0.0",
  "mcpName": "eu.ansvar/japan-law-mcp",
  "description": "Japanese law database covering personal information protection (APPI), cybersecurity, telecommunications, corporate law, and unauthorized access legislation with full-text search",
  "type": "module",
  "main": "dist/server.js",
  "bin": {
    "japan-law-mcp": "dist/server.js"
  },
  "files": [
    "dist/",
    "data/"
  ],
  "scripts": {
    "build": "tsc",
    "test": "vitest run",
    "test:contract": "vitest run __tests__/contract/",
    "test:watch": "vitest",
    "lint": "eslint src/",
    "start": "node dist/server.js",
    "start:stdio": "node dist/server.js --stdio",
    "health": "curl -s http://localhost:3000/health | jq .",
    "build:db": "tsx scripts/build-db.ts",
    "build:db:free": "tsx scripts/build-db-free.ts",
    "ingest": "tsx scripts/ingest.ts",
    "drift:detect": "tsx scripts/drift-detect.ts"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.0",
    "node-sqlite3-wasm": "^0.8.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "eslint": "^9.0.0",
    "tsx": "^4.19.0",
    "typescript": "^5.6.0",
    "vitest": "^2.1.0"
  },
  "engines": {
    "node": ">=18"
  },
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/Ansvar-Systems/japan-law-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/Ansvar-Systems/japan-law-mcp/issues"
  },
  "homepage": "https://github.com/Ansvar-Systems/japan-law-mcp#readme",
  "keywords": [
    "mcp",
    "japan-law",
    "appi",
    "personal-information",
    "cybersecurity",
    "telecommunications",
    "companies-act",
    "unauthorized-access",
    "my-number",
    "japan",
    "legal",
    "compliance",
    "ansvar"
  ],
  "author": "Ansvar Systems <hello@ansvar.eu>",
  "publishConfig": {
    "access": "public"
  }
}
